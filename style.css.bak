body {
	background-image: url("backdrop.png");
	background-size: cover;
	background-repeat: no-repeat;
	margin: 0;
}
nav{
	width: 100%
	float: left;
}
.menu{
	margin: 0;
	padding: 8px;
	height: 17px;
	background-color: #313634;
}

.menu li{
	display: inline;
	
}
.button{
	font-family: Arial;
	font-size: 1em;
	font-style: none;
	color: #ffffff;
	padding: 8px;
	text-decoration: none;
	cursor: pointer;
}
.button:link{
		background-color: #313634;
		color: #ffffff;
}

.button:hover{
		background-color: #d32f2f;
}
.button1{
	font-family: Arial;
	cursor: pointer;
	width: 100%;
	font-size: 1em;
	font-style: none;
	color: #ffffff;
	padding: 8px;
	text-decoration: none;
}
.button1:link{
		background-color: #313634;
		color: #ffffff;
}

.button1:hover{
		background-color: #d32f2f;
		
	background-image: url("backdrop.png");
	background-size: cover;
}